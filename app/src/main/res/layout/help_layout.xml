<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <TextView
        android:id="@+id/tv_explain_help_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="12"
        android:textSize="20sp"/>
        <TextView
            android:id="@+id/tv_money_help_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="12"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tv_alarm_help_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="12"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tv_sum_money_help_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="12"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tv_note_help_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="12"
            android:textSize="20sp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>