<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_technology_bitmap_item"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/cherry"/>

    <TextView
        android:id="@+id/tv_technology_title_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/iv_technology_bitmap_item"
        android:text="金额黑的的哈迪斯读书"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tv_technology_time_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_technology_title_item"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/iv_technology_bitmap_item"
        android:text="2016-9-8  15:45"
        android:textSize="16sp"/>
</RelativeLayout>