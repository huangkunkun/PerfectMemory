<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.huangkun.perfectmemory">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <application
        android:name=".utils.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".activity.WarnActivity"/>
        <activity android:name=".activity.AllMoneyActivity"/>
        <activity android:name=".activity.MoneyPagerActivity"/>
        <activity android:name=".activity.HelpActivity"/>
        <activity android:name=".activity.NoteActivity"
            android:launchMode="singleTask"/>
        <activity android:name=".activity.NoteAddActivity"/>
        <activity android:name=".activity.NoteChangeActivity"/>
        <activity android:name=".activity.MoneyDeleteActivity"
            android:launchMode="singleTask"/>
        <activity android:name=".activity.ChooseItemDetailActivity"/>

        <receiver android:name=".receiver.AlarmReceiver"/>

    </application>

</manifest>